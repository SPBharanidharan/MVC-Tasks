@{
    var username = Context.Session.GetString("Username");
}

<!DOCTYPE html>
<html>
<head>
    <title>B Capitals</title>
    <style>
        body { font-family: Arial, sans-serif; margin:0; padding:0; }
        nav { display:flex; justify-content:space-between; align-items:center;
              background:#080808; color:white; padding:10px; }
        nav h2 { margin:0; }
        nav a { color:white; margin-left:15px; text-decoration:none; }
        nav a:hover { text-decoration:underline; }
        .container { padding:20px; }
        .modal { background:#f2f2f2; padding:20px; border-radius:8px; margin-top:10px; }
        button { padding:5px 10px; margin-top:5px; }
        form input { margin:5px 0; padding:5px; }
    </style>
</head>
<body>
    <nav>
        <div class="nav-left">
            <h2>B-Capitals</h2>
        </div>
        <div class="nav-right">
            @if (string.IsNullOrEmpty(username))
            {
                <a href="/User/Account/Login">Login</a> 
                <a href="/User/Account/Register">Register</a>
            }
            else
            {
                <a href="javascript:void(0)" onclick="loadBalance()">Balance</a> 
                <a href="/User/Account/Dashboard">Dashboard</a>
                <a href="/User/Account/Logout">Logout (@username)</a>
            }
        </div>
    </nav>
    <main class="container">
        @RenderBody()
        <div id="balanceModal"></div>
        <div id="Dashboard"></div>
    </main>

    <script>
        function loadBalance() {
            fetch('/User/Account/GetBalance')
                .then(res => res.text())
                .then(html => {
                    document.getElementById("balanceModal").innerHTML = html;
                });
        }
    </script>
</body>
</html>
<footer>
        <p>&copy; 2025 B Capitals Bank</p>
    </footer>
 
<style>
    body {
    background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTNn_uGYp14ydI9-h4aZhM4mMbf6yb11c95gA&s');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            padding: 10px;
            background-color: black;
            color: white;
            text-align: center;
        }
</style>


